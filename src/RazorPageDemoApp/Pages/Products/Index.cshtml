@page
@model RazorPageDemoApp.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}

<div class="product-page">
    <div class="page-header">
        <h2>📦 Product List</h2>
        <a asp-page="Create" class="btn btn-primary">+ Add Product</a>
    </div>

    <table class="table product-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Products.Any())
            {
                foreach (var item in Model.Products)
                {
                    <tr>
                        <td>
                            <strong>@item.Name</strong>
                        </td>
                        <td>
                            <span class="qty-badge">@item.Quantity</span>
                        </td>
                        <td class="text-muted">
                            @item.Description
                        </td>
                        <td class="text-center">
                            @if (User.IsInRole("Admin") || User.IsInRole("Maintainer"))
                            {
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                    Edit
                                </a>

                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id"
                                class="d-inline"
                                onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        Delete
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        No products available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>